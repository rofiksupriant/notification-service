# Notification Service - Environment Variables Template
# Copy this file to .env and update with your actual values
# ⚠️ NEVER commit .env file to git!

# =============================================================================
# Application Configuration
# =============================================================================
NOTIF_APP_NAME=notification-service

# =============================================================================
# JPA & Hibernate Configuration
# =============================================================================
NOTIF_JPA_DDL_AUTO=validate
NOTIF_HIBERNATE_DIALECT=org.hibernate.dialect.PostgreSQLDialect
NOTIF_HIBERNATE_BATCH_SIZE=10
NOTIF_HIBERNATE_ORDER_INSERTS=true
NOTIF_HIBERNATE_ORDER_UPDATES=true

# =============================================================================
# Database Configuration
# =============================================================================
NOTIF_DB_URL=jdbc:postgresql://localhost:5432/notif_db
NOTIF_DB_USERNAME=postgres
NOTIF_DB_PASSWORD=your-db-password
NOTIF_DB_HIKARI_MAX_POOL_SIZE=10
NOTIF_DB_HIKARI_MIN_IDLE=5

# =============================================================================
# Flyway Database Migrations
# =============================================================================
NOTIF_FLYWAY_ENABLED=true
NOTIF_FLYWAY_LOCATIONS=classpath:db/migration
NOTIF_FLYWAY_BASELINE_ON_MIGRATE=true

# =============================================================================
# Email Configuration (Gmail SMTP)
# =============================================================================
NOTIF_MAIL_HOST=smtp.gmail.com
NOTIF_MAIL_PORT=587
NOTIF_MAIL_USERNAME=your-email@gmail.com
NOTIF_MAIL_PASSWORD=your-gmail-app-password
NOTIF_MAIL_SMTP_AUTH=true
NOTIF_MAIL_SMTP_STARTTLS_ENABLE=true
NOTIF_MAIL_SMTP_STARTTLS_REQUIRED=true
NOTIF_MAIL_SMTP_CONNECTION_TIMEOUT=5000
NOTIF_MAIL_SMTP_TIMEOUT=10000
NOTIF_MAIL_SMTP_WRITE_TIMEOUT=10000

# =============================================================================
# Task Execution Configuration
# =============================================================================
NOTIF_TASK_EXECUTION_CORE_SIZE=5
NOTIF_TASK_EXECUTION_MAX_SIZE=10
NOTIF_TASK_EXECUTION_QUEUE_CAPACITY=100
NOTIF_TASK_SCHEDULING_POOL_SIZE=2

# =============================================================================
# RabbitMQ Configuration
# =============================================================================
NOTIF_RABBITMQ_HOST=localhost
NOTIF_RABBITMQ_PORT=5672
NOTIF_RABBITMQ_USERNAME=guest
NOTIF_RABBITMQ_PASSWORD=guest
NOTIF_RABBITMQ_VIRTUAL_HOST=/
NOTIF_RABBITMQ_CONNECTION_TIMEOUT=10000
NOTIF_RABBITMQ_CONCURRENCY=3
NOTIF_RABBITMQ_MAX_CONCURRENCY=10
NOTIF_RABBITMQ_PREFETCH=1
NOTIF_RABBITMQ_AUTO_STARTUP=true
NOTIF_RABBITMQ_ACKNOWLEDGE_MODE=AUTO
NOTIF_RABBITMQ_ENABLED=true

# =============================================================================
# API Security
# =============================================================================
NOTIF_API_SECRET=your-secret-key-min-32-chars

# =============================================================================
# WhatsApp Integration (Watzap.id)
# =============================================================================
NOTIF_WATZAP_API_KEY=your-watzap-api-key
NOTIF_WATZAP_NUMBER_KEY=your-watzap-number-key
NOTIF_WATZAP_BASE_URL=https://api.watzap.id/v1
NOTIF_WATZAP_TIMEOUT_CONNECT_MS=5000
NOTIF_WATZAP_TIMEOUT_READ_MS=10000

# =============================================================================
# Logging Configuration
# =============================================================================
NOTIF_LOGGING_LEVEL_ROOT=INFO
NOTIF_LOGGING_LEVEL_APP=DEBUG
NOTIF_LOGGING_PATTERN_CONSOLE=%d{yyyy-MM-dd HH:mm:ss} [%thread] %-5level %logger{36} - [traceId=%X{traceId}] - %msg%n
NOTIF_LOGGING_PATTERN_FILE=%d{yyyy-MM-dd HH:mm:ss} [%thread] %-5level %logger{36} - [traceId=%X{traceId}] - %msg%n
NOTIF_LOGGING_FILE_NAME=logs/notification-service.log

# =============================================================================
# Management & Actuator Configuration
# =============================================================================
NOTIF_MANAGEMENT_ENDPOINTS=health,info,metrics,loggers
NOTIF_MANAGEMENT_HEALTH_DETAILS=always

# =============================================================================
# Swagger/OpenAPI Configuration
# =============================================================================
NOTIF_SWAGGER_ENABLED=true
NOTIF_SWAGGER_PATH=/swagger-ui.html
NOTIF_SWAGGER_OPERATIONS_SORTER=method
NOTIF_SWAGGER_TAG_SORTER=alpha
NOTIF_SWAGGER_DISPLAY_OPERATION_ID=false
NOTIF_SWAGGER_DEEP_LINKING=true
NOTIF_SWAGGER_API_DOCS_PATH=/v3/api-docs
NOTIF_SWAGGER_SHOW_ACTUATOR=false
NOTIF_SWAGGER_USE_FQN_FOR_PARAMETER_NAME=true
